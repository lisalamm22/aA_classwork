
<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Make cat" %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Make better cat" %>
<% end %>

<form action="<%= action_url %>" method="POST">
<% if type == :edit %>
<input type="hidden" name="_method" value="PATCH">
<% end %>
    <label for="birth_date">Birthdate:
        <input type="text" name="cat[birth_date]" value="<%= cat.birth_date %>">
    </label>
    <br>
    <label for="color">Color:</label>
    <!--    <input type="text" name="cat[color]" value="<%= @cat.color %>"> -->
    <select id="color" name="cat[color]" >
        <option disabled selected>--Please Select--</option>
        <option value="white">white</option>
        <option value="black">black</option>
        <option value="orange">orange</option>
        <option value="brown">brown</option>
    </select>
    <br>
    <label for="name">Name:
        <input type="text" name="cat[name]" value="<%= cat.name %>">
    </label>
    <br>
    <label for="sex">Sex:
        <input type="text" name="cat[sex]" value="<%= cat.sex %>">
    </label>
    <br>
    <label for="description">Description:
        <input type="text" name="cat[description]" value="<%= cat.description %>">
    </label>
    <br>
    <input type="submit" value="<%= button_text  %>">

</form>